{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vite/client", "dom-speech-recognition"],
    "paths": {
      "@/*": ["./packages/ui/src/*"],
      "@vscode/*": ["./webview/*"],
      "@openchamber/ui/lib/*": ["./packages/ui/src/lib/*"],
      "@openchamber/ui/*": ["./packages/ui/src/*"]
    }
  },
  "include": ["webview/**/*", "./packages/ui/src/**/*"]
}
