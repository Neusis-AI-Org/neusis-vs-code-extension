{
  "name": "openchamber",
  "displayName": "Neusis Code",
  "description": "AI coding assistant powered by Neusis Code.",
  "version": "1.6.8",
  "publisher": "Neusis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Neusis/openchamber.git"
  },
  "qna": "https://discord.gg/ZYRSdnwwKA",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "gpt",
    "agent",
    "coding",
    "chatgpt",
    "groq",
    "assistant",
    "neusis",
    "openchamber"
  ],
  "icon": "assets/app-icon.png",
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openchamber",
          "title": "Neusis Code",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "openchamber": [
        {
          "type": "webview",
          "id": "openchamber.chatView",
          "name": "Chat"
        },
        {
          "type": "webview",
          "id": "openchamber.claudeCodeView",
          "name": "CC"
        }
      ]
    },
    "commands": [
      {
        "command": "openchamber.openSidebar",
        "category": "Neusis Code",
        "title": "Open Sidebar",
        "icon": {
          "light": "assets/icon.svg",
          "dark": "assets/icon-titlebar.svg"
        }
      },
      {
        "command": "openchamber.focusChat",
        "category": "Neusis Code",
        "title": "Focus Chat"
      },
      {
        "command": "openchamber.restartApi",
        "category": "Neusis Code",
        "title": "Restart API Connection"
      },
      {
        "command": "openchamber.showOpenCodeStatus",
        "category": "Neusis Code",
        "title": "Show OpenCode Status"
      },
      {
        "command": "openchamber.openAgentManager",
        "category": "Neusis Code",
        "title": "Open Agent Manager",
        "icon": "$(circuit-board)"
      },
      {
        "command": "openchamber.openActiveSessionInEditor",
        "category": "Neusis Code",
        "title": "Open Active Session in Editor",
        "icon": "$(link-external)"
      },
      {
        "command": "openchamber.openNewSessionInEditor",
        "category": "Neusis Code",
        "title": "Open New Session in Editor",
        "icon": {
          "light": "assets/icon.svg",
          "dark": "assets/icon-titlebar.svg"
        }
      },
      {
        "command": "openchamber.openCurrentOrNewSessionInEditor",
        "category": "Neusis Code",
        "title": "Open Session in Editor",
        "icon": "$(link-external)"
      },
      {
        "command": "openchamber.addToContext",
        "category": "Neusis Code",
        "title": "Add to Context"
      },
      {
        "command": "openchamber.explain",
        "category": "Neusis Code",
        "title": "Explain"
      },
      {
        "command": "openchamber.improveCode",
        "category": "Neusis Code",
        "title": "Improve Code"
      },
      {
        "command": "openchamber.newSession",
        "category": "Neusis Code",
        "title": "New Session",
        "icon": "$(add)"
      },
      {
        "command": "openchamber.showSettings",
        "category": "Neusis Code",
        "title": "Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "openchamber.focusClaudeCode",
        "category": "Neusis Code",
        "title": "Focus Claude Code"
      },
      {
        "command": "openchamber.claudeCode.newConversation",
        "category": "Neusis Code",
        "title": "New Conversation",
        "icon": "$(add)"
      }
    ],
    "submenus": [
      {
        "id": "openchamber.submenu",
        "label": "OpenChamber"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "openchamber.submenu",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "openchamber.openNewSessionInEditor",
          "group": "navigation@1"
        }
      ],
      "view/title": [
        {
          "command": "openchamber.newSession",
          "when": "view == openchamber.chatView",
          "group": "navigation@1"
        },
        {
          "command": "openchamber.openCurrentOrNewSessionInEditor",
          "when": "view == openchamber.chatView",
          "group": "navigation@2"
        },
        {
          "command": "openchamber.openAgentManager",
          "when": "view == openchamber.chatView",
          "group": "navigation@3"
        },
        {
          "command": "openchamber.showSettings",
          "when": "view == openchamber.chatView",
          "group": "navigation@4"
        },
        {
          "command": "openchamber.claudeCode.newConversation",
          "when": "view == openchamber.claudeCodeView",
          "group": "navigation@1"
        }
      ],
      "openchamber.submenu": [
        {
          "command": "openchamber.explain"
        },
        {
          "command": "openchamber.improveCode"
        },
        {
          "command": "openchamber.addToContext"
        }
      ]
    },
    "configuration": {
      "title": "Neusis Code",
      "properties": {
        "openchamber.apiUrl": {
          "type": "string",
          "default": "",
          "description": "URL of an external OpenCode API server. Leave empty to auto-start a local instance."
        },
        "openchamber.opencodeBinary": {
          "type": "string",
          "default": "",
          "description": "Optional absolute path to the opencode CLI binary. Useful if PATH lookup fails. Requires window reload or API restart to apply."
        },
        "openchamber.claudeCodeBinary": {
          "type": "string",
          "default": "",
          "description": "Optional absolute path to the Claude Code CLI binary (claude). Leave empty to use PATH lookup."
        },
        "openchamber.claudeCode.permissionMode": {
          "type": "string",
          "default": "acceptEdits",
          "enum": [
            "default",
            "acceptEdits",
            "plan",
            "dontAsk",
            "bypassPermissions"
          ],
          "enumDescriptions": [
            "Standard permission prompts — tools may be denied in non-interactive mode",
            "Auto-accept file edits (Read, Write, Edit, Glob, Grep) while blocking arbitrary Bash (Recommended)",
            "Read-only plan mode — no tool execution, only planning",
            "Auto-approve all tools without asking",
            "Bypass ALL permission checks (use only in trusted environments)"
          ],
          "description": "Permission mode for Claude Code CLI. Controls which tools are auto-approved."
        },
        "openchamber.claudeCode.allowedTools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional tool names to allow (e.g. \"Bash(git:*)\" \"Edit\"). Passed as --allowedTools to Claude CLI."
        },
        "openchamber.claudeCode.model": {
          "type": "string",
          "default": "",
          "enum": [
            "",
            "claude-sonnet-4-5-20250929",
            "claude-opus-4-6",
            "claude-haiku-4-5-20251001"
          ],
          "enumDescriptions": [
            "Use CLI default model",
            "Claude Sonnet 4.5",
            "Claude Opus 4.6",
            "Claude Haiku 4.5"
          ],
          "description": "Model to use for Claude Code. Leave empty to use the CLI default."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "bun run build:extension && bun run build:webview",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify --main-fields=module,main",
    "build:webview": "VITE_OPENCODE_URL=/api vite build",
    "dev": "concurrently -n \"ext,web\" -c \"cyan,magenta\" \"bun run watch:extension\" \"bun run watch:webview\"",
    "watch:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch --sourcemap --main-fields=module,main",
    "watch:webview": "vite build --watch",
    "type-check": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.webview.json",
    "lint": "bunx eslint --ext .ts,.tsx src webview",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/dom-speech-recognition": "^0.0.7",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vscode/vsce": "^3.2.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.24.2",
    "tailwindcss": "4",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@openchamber/ui": "workspace:*",
    "@opencode-ai/sdk": "^1.1.65",
    "adm-zip": "^0.5.16",
    "jsonc-parser": "^3.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "yaml": "^2.8.1"
  }
}
