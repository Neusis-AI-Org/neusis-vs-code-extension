{
  "name": "neusis-code",
  "displayName": "Neusis Code",
  "description": "A rich chat UI for Claude Code CLI inside VS Code",
  "version": "0.0.1",
  "publisher": "neusis",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neusis-code",
          "title": "Neusis Code",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "neusis-code": [
        {
          "type": "webview",
          "id": "neusis-code.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Neusis Code",
      "properties": {
        "neusis-code.permissionMode": {
          "type": "string",
          "enum": ["askFirst", "autoEdit", "planFirst"],
          "enumDescriptions": [
            "Ask for approval before each file write, edit, or command (modal dialog)",
            "Automatically approve all tool operations without prompting (recommended)",
            "Read-only mode â€” Claude can only read files, no modifications or commands"
          ],
          "default": "autoEdit",
          "description": "Controls how Claude handles tool permissions."
        }
      }
    },
    "commands": [
      {
        "command": "neusis-code.newChat",
        "title": "Neusis Code: New Chat"
      },
      {
        "command": "neusis-code.stopGeneration",
        "title": "Neusis Code: Stop Generation"
      },
      {
        "command": "neusis-code.acceptFileChanges",
        "title": "Neusis Code: Accept File Changes"
      },
      {
        "command": "neusis-code.rejectFileChanges",
        "title": "Neusis Code: Reject File Changes"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
